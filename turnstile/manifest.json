{
    "manifest_version": 3,
    "name": "Turnstile Patcher",
    "version": "2.1",
    "description": "A patcher for Turnstile to enhance user interaction.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "js": [
                "./script.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start",
            "all_frames": true,
            "world": "MAIN"
        }
    ]
}